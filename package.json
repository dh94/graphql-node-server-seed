{
  "name": "parlament-graphql-express-typescript-seed",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "serve": "./node_modules/.bin/nodemon --exec \"npm run build && node\" ./dist/index.js -e ts,gql,graphql",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "build-ts": "tsc || exit 1",
    "clean": "shx rm -r dist",
    "tslint": "tslint -c tslint.json -p tsconfig.json --format stylish || exit 1",
    "copy-static-assets": "node copyStaticAssets.js",
    "test:clean": "shx rm -r .output || exit 0",
    "test:build": "npm run test:clean && cross-env NODE_ENV=test npm run copy-static-assets && tsc --project tsconfig.tests.json",
    "test:watch": "npm run test:build -- --watch",
    "test": "cross-env TS_NODE_PROJECT=tsconfig.tests.json NODE_ENV=test mocha test/**/*.test.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-server-express": "^1.1.2",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "cors": "^2.8.4",
    "dataloader": "^1.3.0",
    "debug": "^3.0.1",
    "express": "^4.15.4",
    "express-status-monitor": "^1.0.0",
    "graphql": "^0.10.3",
    "graphql-subscriptions": "^0.4.4",
    "graphql-tools": "^1.2.1",
    "helmet": "^3.8.1",
    "ip": "^1.1.5",
    "lodash": "^4.17.4",
    "mongoose": "^4.11.9",
    "morgan": "^1.8.2",
    "passport": "^0.4.0",
    "subscriptions-transport-ws": "^0.8.2",
    "typescript": "^2.4.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.8",
    "@types/chai": "^4.0.4",
    "@types/express": "^4.0.37",
    "@types/graphql": "^0.11.0",
    "@types/mocha": "^2.2.42",
    "@types/mongoose": "^4.7.21",
    "@types/node": "^8.0.25",
    "@types/passport": "^0.3.4",
    "@types/winston": "^2.3.5",
    "chai": "^4.1.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.5",
    "mocha": "^3.5.0",
    "mongodb-memory-server": "^1.5.0",
    "nodemon": "^1.11.0",
    "shx": "^0.2.2",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0"
  }
}
